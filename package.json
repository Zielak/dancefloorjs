{
  "name": "dancefloor",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack",
    "test": "ava --verbose",
    "test:watch": "ava --watch",
    "coverage": "nyc ava",
    "lint": "eslint src"
  },
  "author": "Darek Greenly",
  "license": "ISC",
  "dependencies": {
    "babel": "^6.23.0",
    "babel-plugin-provide-modules": "^1.0.3",
    "behavior3js": "git+ssh://git@github.com/Zielak/behavior3js.git",
    "ces": "0.0.4",
    "chance": "^1.0.10",
    "d3-color": "^1.0.3",
    "easystarjs": "^0.4.1",
    "pixi.js": "^4.5.3",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.3.0",
    "eslint-plugin-ava": "^4.2.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "jsdom": "^11.1.0",
    "json-loader": "^0.5.4",
    "nyc": "^11.0.3",
    "style-loader": "^0.18.2",
    "webpack-node-externals": "^1.6.0",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4",
      "@ava/transform-test-files"
    ],
    "sourceMaps": "inline",
    "plugins": [
      [
        "provide-modules", {
          "../test/_dom": ["window", "document"]
        }
      ]
    ]
  },
  "nyc": {
    "include": [
      "src/**.js",
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": "html",
    "report-dir": "./dist/coverage"
  }
}
