{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"globals": {
		"b3": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:ava/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
	},
	"plugins": [
		"ava"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1 }
		],
		"quotes": [
			"error",
			"single"
		],
		"no-console": "off",
		"semi": [
			"error",
			"never"
		]
	}
}
